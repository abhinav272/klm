<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="IndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
    </style>

    <style name="IndicatorView.Large">
        <item name="minWidth">76dip</item>
        <item name="maxWidth">76dip</item>
        <item name="minHeight">76dip</item>
        <item name="maxHeight">76dip</item>
    </style>

    <style name="IndicatorView.Medium">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
    </style>

    <style name="KLMEditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">9dp</item>
        <item name="android:paddingEnd">9dp</item>
        <item name="android:background">@drawable/bg_round_corner</item>
        <item name="android:backgroundTint">@color/colorLightBackground</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorTextSecondary</item>
    </style>

    <style name="KLMButton" parent="Widget.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:background">@drawable/bg_semi_circle_corner</item>
        <item name="android:paddingStart">35dp</item>
        <item name="android:paddingEnd">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
